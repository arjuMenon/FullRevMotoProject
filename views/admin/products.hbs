<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="container d-flex">
                <a style="margin-left: auto;" href="/admin/add-products"><button class="btn btn-success">ADD PRODUCTS</button></a>
            </div>
            <div class="bg-secondary rounded h-100 p-4">
                <h6 class="mb-4">Products List</h6>
                <div class="table-responsive">
                    <table id="productTable" class="table table-bordered" style="border-color:rgb(90, 90, 90);">
                        <thead>
                            <tr>
                                <th scope="col">Product Name</th>
                                <th scope="col">Price</th>
                                <th scope="col">Description</th>
                                <th scope="col">Brand</th>
                                <th scope="col">Images</th>
                                <th scope="col">Action</th>
                                <th scope="col">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each products}}
                            <tr>
                                <td>{{this.Name}}</td>
                                <td>{{this.Price}}</td>
                                <td>{{this.About}}</td>
                                <td>{{this.Brand}}</td>
                                <td><img src="{{this.Image}}.jpg" alt="" style="height: auto; width: 100px;"></td>
                                <td><a href="/admin/edit-products/{{this._id}}">
                                    <button class="text-white" style="background-color: rgb(22, 17, 17);border-color: rgb(39, 216, 51);border-radius:5px; width: 90px;border-width: 4px">EDIT</button></a>
                                </td>
                                <td><a href="/admin/delete-product/{{this._id}}">
                                    <button class="text-white" style="background-color: rgb(22, 17, 17);border-color: rgb(196, 24, 24);border-radius:5px; width: 90px;border-width: 4px"
                                    onclick="return confirm('Do you want to delete {{this.Name}} item?')">DELETE</button></a>
                                </td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Include DataTables CSS and JS -->
<link rel="stylesheet" href="https://cdn.datatables.net/1.13.5/css/jquery.dataTables.min.css" />
<script src="https://cdn.datatables.net/1.13.5/js/jquery.dataTables.min.js"></script>

<script>
   
$(document).ready( function () {
    $('#productTable').DataTable();
} );

</script>
